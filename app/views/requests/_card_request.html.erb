
  <% @requests.each do |request| %>
    <div class="card-request">
      <% @sock = request.sock %>
      <%= image_tag("dobby.webp", width: "100px") %>
      <div class="card-request-infos">
        <h2><%= @sock.title %></h2>
        <p> Taille : <%= @sock.size %></p>
        <p> Couleur : <%= @sock.color %></p>
        <p> Etat : <%= @sock.state %></p>
        <p> Date de d√©but : <%= request.start_date %></p>
        <p> Date de fin : <%= request.end_date %></p>
        <div class="card-request-actions">
          <%= link_to "Voir", request_path(request), class: "btn btn-primary" %>
          <%= link_to "Modifier", edit_request_path(request), class: "btn btn-secondary" %>
          <%= link_to "Supprimer", request_path(request), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
